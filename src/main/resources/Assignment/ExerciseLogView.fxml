<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="293.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Assignment.ExerciseLogController">
    <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="30.0" spacing="20.0">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Log Your Exercise" />

        <Label text="Exercise Type:" />
      <ComboBox fx:id="exerciseTypeField" promptText="Select Exercise" />

        <Label text="Duration (minutes):" />
        <TextField fx:id="durationField" />

        <Label text="Calories Burned:" />
        <TextField fx:id="caloriesField" />

        <Button onAction="#logExercise" text="Log Exercise" />

        <Label fx:id="statusLabel" style="-fx-font-weight: bold;" />
    </VBox>

</AnchorPane>
