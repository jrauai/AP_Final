<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Assignment.SearchController"
      spacing="10" alignment="TOP_CENTER" prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextField fx:id="searchField" promptText="Enter username or email" prefWidth="400"/>
    <Button text="Search" onAction="#handleSearch" prefWidth="150"/>
    <ListView fx:id="resultList" prefWidth="400" prefHeight="250"/>
</VBox>
